<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/activity_preview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--预览图片-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--标题栏-->
        <RelativeLayout
            android:id="@+id/titlebar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimary">

            <ImageView
                android:id="@+id/backimageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_arrow_back"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                />

            <TextView
                android:id="@+id/counttitle"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="20sp"
                android:layout_centerInParent="true"
                android:layout_alignParentTop="true"
                android:textColor="#FFFFFF"
                android:text="1/1"
                android:gravity="center"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:background="@drawable/deletefile"/>

        </RelativeLayout>
        <!--画廊-->
        <cn.com.hesc.picture.multiplepic.MutipleTouchViewPager
            android:id="@+id/framwork_contentPager"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="34dp"
            android:layout_gravity="center"
            android:flipInterval="30"
            android:persistentDrawingCache="animation"
            />
        <!--底部的工具栏-->
        <TextView
            android:id="@+id/modifytextview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:padding="10dp"
            android:textSize="16sp"
            android:layout_gravity="bottom"
            android:text="编辑图片"
            android:textColor="@android:color/white"
            android:background="#CC000000"/>
    </FrameLayout>
    <!--进行图片涂鸦-->
    <FrameLayout
        android:id="@+id/modifypiclayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <cn.com.hesc.picture.ModifyImageView
            android:id="@+id/modifyImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="left|top"
            android:textColor="@color/deepskyblue"
            android:text="取消"
            android:id="@+id/cancel"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right|top"
            android:textColor="@color/sendbtn_normal"
            android:text="确定"
            android:id="@+id/ok"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:gravity="center_horizontal"

            >
            <ImageView
                android:id="@+id/white"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:background="@drawable/whitebg"/>
            <ImageView
                android:id="@+id/black"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:background="@drawable/blackbg"
                />
            <ImageView
                android:id="@+id/red"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:background="@drawable/redbg"
                />
            <ImageView
                android:id="@+id/green"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:background="@drawable/greenbg"
                />
            <ImageView
                android:id="@+id/blue"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:background="@drawable/bluebg"
                />
        </LinearLayout>

    </FrameLayout>

</RelativeLayout>
