<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_relative"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:background="#ed4255">

    <LinearLayout
        android:id="@+id/titlebarline"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/leftbtn"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/ic_arrow_back"
            android:background="@android:color/transparent"
            android:drawablePadding="6dp"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/titletv" android:gravity="center_horizontal|center"
            android:singleLine="true" android:textSize="20sp" android:textColor="#ffffff"/>

        <Button
            android:id="@+id/rightbtn"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:text="上报"
            android:background="@android:color/transparent"
            android:textColor="#ffffff"
            android:layout_alignParentRight="true"
            android:textSize="18sp"/>
    </LinearLayout>



</RelativeLayout>