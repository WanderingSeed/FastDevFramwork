<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    tools:context="cn.com.hesc.picture.Camera_VideoActivity">
    <SurfaceView
        android:id="@+id/camerasurfaceview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <SurfaceView
        android:id="@+id/previewsurfaceview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        />

    <ProgressBar
        android:id="@+id/vedioprogress"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:indeterminate="false"
        android:progressDrawable="@drawable/videoprogressbg"
        android:visibility="invisible"/>
    <RelativeLayout
        android:id="@+id/titletoolline"
        android:layout_marginTop="7dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        android:padding="8dp">
        <TextView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/mediaclose"/>
        <TextView
            android:id="@+id/fbcamera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/camerarection"
            />
        <TextView
            android:id="@+id/flashbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/fbcamera"
            android:layout_marginRight="10dp"
            android:background="@drawable/closeflash"
            android:visibility="invisible"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center|bottom"
        >
        <ImageButton
            android:id="@+id/delrecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/video_delete"
            android:layout_centerInParent="true"
            />
        <ImageButton
            android:id="@+id/donerecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/video_done"
            android:layout_centerInParent="true"
            android:longClickable="true"
            />
        <ImageButton
            android:id="@+id/modifyrecord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/modifybg"
            android:src="@drawable/modifyfg"
            android:layout_centerInParent="true"/>
        <ImageButton
            android:id="@+id/recordmedia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/video_recording"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <!--进行图片涂鸦-->
    <FrameLayout
        android:id="@+id/modifypiclayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <cn.com.hesc.picture.ModifyImageView
            android:id="@+id/modifyImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="left|top"
            android:textColor="@color/deepskyblue"
            android:text="取消"
            android:id="@+id/cancel"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_gravity="right|top"
            android:textColor="@color/sendbtn_normal"
            android:text="确定"
            android:id="@+id/ok"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:gravity="center_horizontal"

            >
            <ImageView
                android:id="@+id/white"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:gravity="center"
                android:background="@drawable/whitebg"/>
            <ImageView
                android:id="@+id/black"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:background="@drawable/blackbg"
                />
            <ImageView
                android:id="@+id/red"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:background="@drawable/redbg"
                />
            <ImageView
                android:id="@+id/green"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:background="@drawable/greenbg"
                />
            <ImageView
                android:id="@+id/blue"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_margin="10dp"
                android:background="@drawable/bluebg"
                />
        </LinearLayout>

    </FrameLayout>

</FrameLayout>
