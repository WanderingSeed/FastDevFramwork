<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="metrialdialog例子"
            android:onClick="dialog"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Timepick日历组件"
            android:onClick="timepick"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="web调用实例"
            android:onClick="webDemo"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="轮选组件"
            android:onClick="wheelview"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="拍照录制视频"
            android:onClick="takephoto"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="recycleview例子"
            android:onClick="recycle"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="zxing识别生成二维码"
            android:onClick="zxing"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="地图引擎"
            android:onClick="maptest"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GPS数据"
            android:onClick="gpstest"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="录音"
            android:onClick="audio"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开启后台服务"
            android:onClick="backservice"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开启软件相关的系统设置"
            android:onClick="syssetting"/>
    </LinearLayout>


</ScrollView>